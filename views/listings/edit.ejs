
<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2 mt-3">
<body>

  <form method="post" novalidate class="needs-validation" enctype="multipart/form-data" action="/listings/<%= listings.id %>?_method=put">
        <div class="mb-2">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="listing[title]" value="<%= listings.title %>" class="form-control" required />
      <div class="invalid-feedback">
        Please enter a title
       </div>
  </div>

  <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea cols="10" rows="7" class="form-control" name="listing[description]" required><%= listings.description %></textarea>
      <div class="invalid-feedback">
        Please describe about your title
       </div>
  </div>
  <div class="mb-3">
    <p>Previous image </p>
    <img src="<%= originalImageUrl %>" width="250">
  </div>

  <div class="mb-3">
      <label for="image" class="form-label">New Image Link/URL</label>
      <input class="form-control" type="file" name="listing[image]" value="<%= listings.image.url %>" />
  </div>

  <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input class="form-control" type="number" name="listing[price]" value="<%= listings.price %>" required />
      <div class="invalid-feedback">
        Please enter a price
       </div>
  </div>

  <div class="mb-3 col-md-8">

<div class="row">
  <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input class="form-control" type="text" name="listing[location]" value="<%= listings.location %>" required />
      <div class="invalid-feedback">
        Please enter a location
       </div>
  </div>

  <div class="mb-3">
      <label for="country" class="form-label">Country</label>
      <input class="form-control" type="text" name="listing[country]" value="<%= listings.country %>" required />
      <div class="invalid-feedback">
        Please enter a country
       </div>
  </div>
</div>
</div>
  <button class="btn edit-button mb-4">Submit</button>
</form>
</body>
</div>
</div>